<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>Service Fabric integration for Microsoft.ReverseProxy</Description>
    <TargetFrameworks>net5.0;netcoreapp3.1</TargetFrameworks>
    <OutputType>Library</OutputType>
    <RootNamespace>Microsoft.ReverseProxy.ServiceFabricIntegration</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="obj\**" />
    <EmbeddedResource Remove="obj\**" />
    <None Remove="obj\**" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="DynamicProxyGenAssembly2" Key="$(MoqPublicKey)" />
  </ItemGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.ServiceFabric" Version="7.1.417" />
    <PackageReference Include="Microsoft.ServiceFabric.Services" Version="4.1.417" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\ReverseProxy\Microsoft.ReverseProxy.csproj" />
  </ItemGroup>

</Project>
